                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <div class="form-check">

                                @*<input class="form-check-input" type="checkbox" id="ChkReporttype" onclick="CheckReporttype()">*@
