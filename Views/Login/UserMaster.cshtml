
@model HDFCMSILWebMVC.Models.UserMaster
@{
    ViewBag.Title = "UserMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<div class="content-wrapper">
    @*<div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">User Master</h1>
                    </div>
                </div>
            </div>
        </div>*@

    <!-- general form elements disabled -->
    <div class="card card-warning">
        <div class="card-header">
            <h1 class="card-title">User Master</h1>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm("UserMaster", "Login", FormMethod.Post))
            {
                if (TempData["alertMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"> × </button>
                        @TempData["alertMessage"].ToString()
                    </div>
                }

                @*<form>*@
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>User Name</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.LoginName, new { @placeholder = "Enter Your User Name ...", @class = "form-control", @required = "true" })
                            @*<input type="text" class="form-control" placeholder="Enter Your User Name ...">*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Password</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter Your Password .", @class = "form-control", @required = "true" })
                            @*<input type="password" class="form-control" placeholder="Enter Your Password ...">*@
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>confirm Password</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            @*<input type="password" class="form-control" placeholder="Enter Your Password ...">*@
                            @Html.PasswordFor(m => m.ReTypePassword, new { @placeholder = "Retype password.", @class = "form-control", @required = "true" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Role Type</label>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="form-group">
                            @Html.DropDownListFor(m => m.LoginType, new SelectList(
                  new List<Object>{
                        new { value = 0 , text = "Select Role Type"  },
                       new { value = "ADMIN" , text = "ADMIN"  },
                       new { value = "CASH OPS" , text = "CASH OPS" },
                       new { value = "TRADE OPS" , text = "TRADE OPS"}}, "value", "text", 0), new { @class = "form-control" })
                            @*<select class="form-control">
                                    <option>ADMIN</option>
                                    <option>CASH OPS</option>
                                    <option>TRADE OPS</option>
                                </select>*@
                        </div>
                    </div>
                </div>
                <form method="post" asp-controller="Login">

                    <div class="row">
                        <div class="col-sm-10">
                            <div class="form-group">
                                <button type="submit" class="btn btn-app bg-success" value="Save" asp-action="Save"><i class="fas fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-app bg-danger" value="Save" asp-action="Index"><i class="fas fa-arrow-alt-circle-left"></i>Back</button>
                                @*<a class="btn btn-danger" asp-action="Index">Back</a>*@
                            </div>
                        </div>
                    </div>

                </form>
                @*</form>*@
            }

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</div>
<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>